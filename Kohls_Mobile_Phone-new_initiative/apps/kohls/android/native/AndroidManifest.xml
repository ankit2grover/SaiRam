<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.materialdemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PMPActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".PDPActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PDPPreviewActivity"
            android:label="@string/title_activity_pdppreview"
            android:theme="@android:style/Theme.Material.Light.Dialog.NoActionBar"></activity>
        <activity
            android:name=".PMP.Filter.PMPFilterActivity"
            android:theme="@style/AppCustomDialogTheme"></activity>
    </application>

</manifest>
